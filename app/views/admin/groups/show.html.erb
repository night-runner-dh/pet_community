<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h2>グループ詳細</h2>
         <div>
            <%= link_to 'グループ削除', admin_group_path(@group), method: :delete,  class: "btn alert-danger", data: { confirm: "本当に削除しますか？" } %>
         </div>
         
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>作成者</th>
              <th>グループ名</th>
              <th>紹介文</th>
              <th>メンバー</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td></td>
              <td><%= @group.owner.name %></td>
              <td><%= @group.name %></td>
              <td><%= @group.introduction %></td>
              <td>
                <% @group.users.each do |user| %>
                  <li style="list-style:none;"><%= user.name %></li>
                <% end %>
              </td>
              <td>
              </td>
            </tr>
          </tbody>
        </table>

      <% @group_comment.each do |group_comment| %>
          <div>
            <li>内容：<%= group_comment.comment %></li>
            <li><%= group_comment.user.name %>さんのメッセージ</li><li><%= group_comment.created_at.strftime('%Y/%m/%d') %>に送信済み</li>
             <%= button_to "コメント削除", group_group_comment_path(group_comment.id), method: :delete %>
          </div>
        <hr>
      <% end %>
      <div>
      <%= paginate @group_comment %>
      </div>
      
    </div>
  </div>
</div>