<% if @user.errors.any? %>
  <div>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="col-md-2 offset-1">
  <h3 class="my-3 bg-light text-center"><strong>登録情報編集</h3>
</div>

<div class="container mt-5">
<%= form_with model: @user,local:true, url: admin_user_path, method: :patch do |f| %>
  <% render "public/shared/error_messages", resource: @user %>

      <div class="row">
          <label class="col-lg-3">名前</label>
          <div class="col-lg-3">
            <%= f.text_field :name,autoforcus: true, autocomplete: "name" %>
          </div>
          
      <div class="container mt-4">
         <div class = "row">
          <label class="col-lg-3">メールアドレス</label>
          <div class="col-lg-3">
          <%= f.text_field :email,autoforcus: true, autocomplete: "email" %>
          </div>
       </div>
      </div>
        <div class ="container mt-4">
          <div class = "row">
             <%= f.label :is_active, '会員ステータス', class: 'col-sm-4 col-form-label' %>
             <div class="col-sm-9">
               <div class="custom-control custom-radio custom-control-inline">
                 <%= f.radio_button :is_active, true, checked: @user.is_active == true, class: 'custom-control-input', id: 'status-active' %>
                 <%= f.label :is_active, '有効', class: 'custom-control-label', for: 'status-active' %>
               </div>
               <div class="custom-control custom-radio custom-control-inline">
                 <%= f.radio_button :is_active, false, checked: @user.is_active == false, class: 'custom-control-input', id: 'status-deleted' %>
                 <%= f.label :is_active, '退会', class: 'custom-control-label', for: 'status-deleted' %>
               </div>
               <div class="form-group row offset-3">
                 <div class="mx-5"><%= f.submit "編集内容を保存",class: 'btn btn-sm btn-success' %></div>
               </div>
             </div>
          </div>
        </div>
<% end %>
</div>