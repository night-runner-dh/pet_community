<div class = "container">
<div>
    <h2>ユーザー詳細</h2><br>
</div>
<div class = "row">
    <div class = "text-center">プロフィール画像
<div class="col-10 ml-5" style="display: flex; justify-content: center; align-items: center;">
    
<% if @user.get_profile_image.present? %>
  <%= image_tag @user.get_profile_image, alt: "プロフィール画像" %>
<% else %>
  <%= image_tag "default-image.jpg", size: "200x200", alt: "デフォルト画像" %>
<% end %>

</div>
</div>
<div class = "col-7">
<table class="table mt-4">
  <tr></tr>
  <tr>
	  <th>ハンドルネーム:</th>
	  <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
   
    <th>ユーザーステータス</th>
<% if @user.is_active? %>
  <td class="text-success">有効</td>
<% else %>
  <td class="text-muted">退会</td>
<% end %>
  </tr>
  <tr>
    <td>
  <p><%= link_to "投稿一覧", admin_my_posts_path(user_id: @user.id) %></p>
  </td>
  <th></th>
  <div class="mx-5"><%= link_to "編集する", edit_admin_user_path, class: 'btn btn-sm btn-success' %></div>
  </tr>
</table>
</div>
</div>
