<div class="container px-5 px-sm-0">
   <div class="row">  

 <div class="col-md-8 offset-md-1">
  <table class="table">
  <h2>ユーザー一覧</h2>
 
<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>ハンドルネーム</th>
      <th colspan="4"></th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', admin_user_path(id: user.id) %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <td></td>
        <% if user.is_active? %>
          <td class="text-success">　有効</td>
        <% else %>
          <td class="text-muted">　退会</td>
        <% end %>
      </tr>
     
    <% end %>
    
  </tbody>
</table>
  <div class = "row">
    <div class="mx-auto">
      <%= paginate @users %>
    </div>
  </div>
</div>