
<div class="card-list-container py-5">
  <% @post.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to public_post_path(post.id) do %>
      <% if post.image.present? %>
        <%= image_tag post.image, size: "50x50" %>
      <% end %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%#= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(public_post_path(post.id), class: "text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= post.body %></p>
          <%= link_to "Show", public_post_path(post.id), class: "show-button" %>
          <span><i class="fas fa-user"></i> By <%= post.user.name %>  </span>
          <span><%#= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class: "text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%#= paginate @post %>
</div>