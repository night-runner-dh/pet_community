<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h2>Group Detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>作成者</th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td></td>
             <td><%= @group.owner.name %></td>
          
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
                <% @group.users.each do |user| %>
                  <li style="list-style:none;"><%= user.name %></li>
                <% end %>
            </td>
            <td>
              <% if @group.owner_id == current_user.id %>
                <%= link_to "Edit", edit_public_group_path(@group), class: "btn btn-success" %>
              <% else %>
                <% if @group.include_user?(current_user) %>
                  <%= link_to "Leave this group", public_group_group_users_path(@group), method: :delete, class: "btn btn-danger" %>
                <% else %>
                  <%= link_to "Join this group", public_group_group_users_path(@group), method: :post, class: "btn btn-success" %>
                <% end %>
              <% end %>
            </td>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
<% @group.group_comments.each do |group_comment| %>
   <p><%= group_comment.comment %></p>
   by <%= group_comment.user.name %>
   <%= group_comment.created_at.strftime('%Y/%m/%d') %>
  <% if group_comment.user == current_user %>
  <%= button_to "コメント削除", public_group_group_comment_path(group_comment.id), method: :delete %>
  <% end %>
 <% end %>
 <%= form_with url: public_group_group_comments_path(@group) do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントは、ここに入力してください" %>
    <%= f.submit "送信する" %>
<% end %>
