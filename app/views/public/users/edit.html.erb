<% if @user.errors.any? %>
  <div>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="col-md-2 offset-1">
  <h3 class="my-3 bg-light text-center"><strong>登録情報編集</h3>
</div>
<div class = "col-6 mx-auto">
  <p>現在投稿されている投稿画像</p>
    <%if @user.profile_image.present? %>
      <%= image_tag @user.profile_image, size: "200x200" %>
    <% end %>
</div>
<div class="container mt-5">
  <%= form_with model: @user,local:true, url: public_information_path, method: :patch do |f| %>
    <% render "public/shared/error_messages", resource: @user %>
      <div class = "row">
        <label class = "col-lg-3">プロフィール画像</label>
          <div class = "col-lg-3">
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
          </div>
      </div>
      <div class="row">
        <label class="col-lg-3">名前</label>
          <div class="col-lg-3">
            <%= f.text_field :name,autoforcus: true, autocomplete: "name" %>
          </div>
      </div>
      <div class="row mt">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.text_field :email,autoforcus: true, autocomplete: "email" %>
        </div>
      </div>
      <div class="form-group row offset-3">
        <div class="mx-3 mt-2"><%= f.submit "編集内容を保存",class: 'btn btn-sm btn-success' %></div>
        <div class="mx-3 mt-2"><%= link_to public_unsubscribe_path,class: "btn btn-sm btn-danger" do %>退会する<% end %></div>
      </div>
  <% end %>
</div>