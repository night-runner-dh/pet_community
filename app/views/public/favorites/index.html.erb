<div class="card-list-container py-5">
  <% @post_favorites.each do |post_favorite| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-3" style="display: flex; justify-content: center; align-items: center;">
          <%= link_to post_path(post_favorite.post.id) do %>
            <% if post_favorite.post.image.present? %>
              <%= image_tag post_favorite.post.image, size: "130x130" %>
            <% end %>
          <% end %>
        </div>
        <div class="col-9">
          <p class="card-title">
            <%= link_to(post_path(post_favorite.post.id), class: "text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post_favorite.post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= truncate(post_favorite.post.body, length: 20) %></p>
          <%= link_to "Show", post_path(post_favorite.post.id), class: "show-button" %>
          <span><i class="fas fa-user"></i> By <%= post_favorite.post.user.name %>  </span>
          <p><%= post_favorite.post.post_comments.count %>コメント　 ♥<%= post_favorite.post.favorites.count %> いいね</p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <div class = "row">
    <div class="mx-auto">
      <%= paginate @post_favorites %>
    </div>
  </div>
</div>