<div class="container px-5 px-sm-0">
   <div class="row">  

 <div class="col-md-8 offset-md-1">
  <table class="table">
<h2>検索一覧</h2>
<table class='table'>


<!--管理者用検索対象モデルがUserの時 -->
  <% if admin_signed_in? %>
    <% if @range == "User" %>
      <thead>
        <tr>
          <th></th>
          <th>name</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
         <tr>
           <td><%#= image_tag user.get_profile_image, size: '50x50' %></td>
           <td><%= user.name %></td>
           <td><%= link_to 'Show', admin_user_path(id: user.id) %></td>
         </tr>
        <% end %>
      </tbody>
    <% else %>
      <!--管理者用検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
      <thead>
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>内容</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%#= image_tag book.user.get_profile_image, size:'50x50' %></td>
            <td>
              <span> <%= post.title %></span>
            </td>
            <td><%= post.body %></td>
            <td><%= link_to 'Show', admin_post_path(post.id) %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
</table>
  <% else %>
    <!--検索対象モデルがUserの時 -->
    <% if @range == "User" %>
      <thead>
        <tr>
          <th></th>
          <th>name</th>
          <th colspan="4"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%#= image_tag user.get_profile_image, size: '50x50' %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', public_user_path(id: user.id) %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <!--検索対象モデルがUserではない時(= 検索対象モデルがpostの時) -->
      <thead>
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>内容</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%#= image_tag book.user.get_profile_image, size:'50x50' %></td>
            <td>
              <span> <%= post.title %></span>
            </td>
            <td><%= post.body %></td>
            <td><%= link_to 'Show', public_post_path(post.id) %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
    </table>
  <% end %>